<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/botaoLogar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Logar"
         />
    
    <Button
        android:id="@+id/botaoAnonimo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Anonimo" />
    
       <Button
        android:id="@+id/botaoCadastrar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Cadastrar" />
    <Button
        android:id="@+id/botaoListarTodos"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Listar Todas as Denuncias" />

    <Button
        android:id="@+id/botaoLogarComEmail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Logar usando o email" />

    <Button
        android:id="@+id/botaoEditarCadastro"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Editar Cadastro" />

</LinearLayout>
